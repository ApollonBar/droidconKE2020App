<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.views.BookmarkedSessionsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorSurface"
        android:theme="@style/Theme.Sessions.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop"
                app:layout_collapseMode="parallax">

                <ImageButton
                    android:id="@+id/imageViewBackNavigation"
                    android:layout_width="@dimen/imageButtonWidth"
                    android:layout_height="@dimen/imageButtonHeight"
                    android:layout_marginStart="18dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/back_button"
                    android:src="@drawable/ic_arrow_back_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <cn.gavinliu.android.lib.shapedimageview.ShapedImageView
                    android:id="@+id/imageViewAppIcon"
                    android:layout_width="@dimen/imageIconWidth"
                    android:layout_height="@dimen/imageIconHeight"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_droidcon_logo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shape_mode="circle"
                    tools:layout_editor_absoluteY="0dp" />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_saved_sessions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/switchMarginEnd"
                    android:theme="@style/SwitchTheme"
                    android:thumb="@drawable/ic_favorite_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:checked="true"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_saved_sessions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?actionBarSize"
                android:theme="@style/Theme.Sessions.PopupOverlay"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/layoutMarginStart"
                    android:layout_marginBottom="@dimen/layoutMarginBottom"
                    android:layout_marginTop="@dimen/layoutMarginTop">
                    <TextView
                        android:id="@+id/titleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="@string/my_sessions"
                        android:textColor="?android:attr/textColorPrimary"
                        android:textSize="@dimen/sessionTitleFontSize"
                        tools:text="My Sessions"
                        android:layout_gravity="start"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/titleTvMarginTop"/>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:soundEffectsEnabled="true"
                        app:tabGravity="center"
                        app:tabIndicatorAnimationDuration="2000"
                        app:tabIndicatorColor="@android:color/transparent"
                        app:tabMode="scrollable"
                        app:tabRippleColor="@android:color/transparent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSessions_saved_sessions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/horizontalPadding"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.views.BookmarkedSessionsFragment"
        tools:listitem="@layout/item_session" />

    <TextView
        android:id="@+id/no_sessions_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="@dimen/horizontalPadding"
        android:text="@string/no_bookmarked_sessions"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>