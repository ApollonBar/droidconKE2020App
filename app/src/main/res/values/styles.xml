<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DroidConKe.DayNight" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.DroidConKe" parent="Theme.DroidConKe.DayNight">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>

        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorOnBackground">@color/onBackgroundColor</item>

        <item name="colorSurface">@color/surfaceColour</item>
        <item name="colorOnSurface">@color/onSurfaceColour</item>
    </style>

    <style name="Theme.DroidConKe.ActionBar" parent="Theme.DroidConKe">
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="android:textColorSecondary">@color/onBackgroundColor</item>
    </style>

    <style name="Theme.DroidConKe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DroidConKe.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.DroidConKe.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light">

    </style>

</resources>
